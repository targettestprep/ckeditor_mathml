window['CKEDITOR_BASEPATH'] = "/assets/ckeditor/";

window.CKEDITOR_ASSETS_MAPPING = {
  <% if Rails.env.development? %>
    <% Rails.application.assets.each_logical_path(->(logical_path, filename){ logical_path =~ /ckeditor/ && logical_path != 'ckeditor/override.js' }) do |asset| %>
      "<%= asset %>": "<%= asset_path(asset) %>",
    <% end %>
  <% else %>
    <% Rails.application.assets_manifest.assets.keys.select { |logical_path| logical_path =~ /ckeditor/ && logical_path != 'ckeditor/override.js' }.each do |asset| %>
      "<%= asset %>": "<%= asset_path(asset) %>",
    <% end %>
  <% end %>
}

window.CKEDITOR_GETURL = function( resource ) {
  // If this is not a full or absolute path.
  if ( resource.indexOf( ':/' ) == -1 && resource.indexOf( '/' ) !== 0 )
    resource = this.basePath + resource;

  // Add the timestamp, except for directories.
  if ( resource.charAt( resource.length - 1 ) != '/'  ){
    var url = resource.match( /^(.*?:\/\/[^\/]*)\/assets\/(.+)/ );
    if(url) resource = (CKEDITOR_ASSETS_MAPPING[url[2]] || '/assets/' + url[2]);
  }

  return resource;
}
